</head>
<body>
    <!--left-fixed -navigation-->
    <!-- header-starts -->
    <!-- //header-ends -->
    <!-- main content start-->
    <div id="page-wrapper">
        <div class="main-page signup-page">
            <h2 class="title1">SignUp Here</h2>
            <div class="sign-up-row widget-shadow">
                <center>
                <h5>Personal Information :</h5>
                @using (Html.BeginForm("Register", "Admin", FormMethod.Post))
                {
                    <div class="sign-u">
                        @Html.TextBoxFor(a => a.username, new { type = "email", placeholder = "Email", required = "required" })
                        <div class="clearfix"> </div>
                    </div>
                    <div class="sign-u">
                        @Html.TextBoxFor(a => a.password, new { type = "password", placeholder = "Password", required = "required" })
                        <div class="clearfix"> </div>
                    </div>
                    <div class="sign-u">
                        @Html.TextBoxFor(a => a.status, new { type = "text", placeholder = "Status", required = "required" })
                        <div class="clearfix"> </div>
                    </div>
                    @*<div class="sign-u">
            <center><h3>Want to add your image</h3></center>
                <center><a class="btn btn-info" href="@Url.Action("AddImg","Account", new {id=UserId})">Add Image</a></center>
            </div>
                    *@ <div class="clearfix"> </div>
                    <div class="sub_home">
                        <input type="submit" value="Submit">
                        <div class="clearfix"> </div>
                    </div>
                    <div class="registration">
                        Already Registered.
                        <a class="" href="@Url.Action("Login","Admin")">
                            Login
                        </a>
                    </div>
                }
                    </center>
            </div>
        </div>
    </div>

    <!-- side nav js -->
    <script src='~/AdminLibrary/loginjs/SidebarNav.min.js' type='text/javascript'></script>
    <script>
        $('.sidebar-menu').SidebarNav()
    </script>
    <!-- //side nav js -->
    <!-- Classie --><!-- for toggle left push menu script -->
    <script src="~/AdminLibrary/loginjs/classie.js"></script>
    <script>
        var menuLeft = document.getElementById('cbp-spmenu-s1'),
            showLeftPush = document.getElementById('showLeftPush'),
            body = document.body;

        showLeftPush.onclick = function () {
            classie.toggle(this, 'active');
            classie.toggle(body, 'cbp-spmenu-push-toright');
            classie.toggle(menuLeft, 'cbp-spmenu-open');
            disableOther('showLeftPush');
        };

        function disableOther(button) {
            if (button !== 'showLeftPush') {
                classie.toggle(showLeftPush, 'disabled');
            }
        }
    </script>
    <!-- //Classie --><!-- //for toggle left push menu script -->
    <!--scrolling js-->
    <script src="~/AdminLibrary/loginjs/jquery.nicescroll.js"></script>
    <script src="~/AdminLibrary/loginjs/scripts.js"></script>
    <!--//scrolling js-->
    <!-- Bootstrap Core JavaScript -->
    <script src="~/AdminLibrary/loginjs/bootstrap.js"></script>

</body>
</html>


